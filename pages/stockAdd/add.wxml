<!--pages/stockAdd/add.wxml-->
<view class="body">

  <van-search
    value="{{ value }}"
    placeholder="请输入搜索关键词"
    use-action-slot
    bind:change="onChange1"
    bind:search="onSearch"
    bind:clear="onClear"
  >
    <view slot="action" bind:tap="onSearch">搜索</view>
  </van-search>

  <view class="none_products" wx:if="{{products.length==0}}">
    暂无数据
  </view>
  <view wx:else>
    <van-checkbox-group value="{{ result }}" data-key="result" bind:change="onChange">
      <view class="box"
            wx:for="{{products}}"
            wx:item="item"
            wx:key="index">
        <van-panel title="{{item.product.type}}" status="库存: {{item.packages}}">
          <view class="box-view" data-product="{{item}}">
            <view class="whorl">螺纹: {{item.product.whorl}}</view>
            <view class="seam">止口: {{item.product.seam}}</view>
            <view class="minus">负丝: {{item.product.minus}}</view>
            <view class="select">
              <van-checkbox name="{{index}}"></van-checkbox>
            </view>
          </view>
        </van-panel>
      </view>
    </van-checkbox-group>
  </view>

<!-- 入库按钮 -->
  <view class="bottom-box" bindtap="toggleBottomPopup">
    <view class='bottom-btn' bindtap="">
      <view class="toPutStock">入库</view>
    </view>
  </view>
  <van-popup
    show="{{bottom}}"
    position="bottom"
    custom-class="bottom"
    bind:close="toggleBottomPopup"
    >
    <view class="bottomPopup">

      <van-row wx:for="{{result}}" wx:item="item" wx:key="index">
        <van-col span="22" offset="1" class="van-col">
          <view class="col">
            <view class="type">{{products[index].product.type}}</view>
            <view class="whorl">{{products[index].product.whorl}}</view>
            <view class="seam">止口: {{products[index].product.seam}}</view>
            <view class="minus">负丝: {{products[index].product.minus}}</view>
            <view class="amount">库存: {{products[index].packages}}</view>
          </view>
          <van-stepper class="stepper" value="{{ 1 }}" bind:change="onChange" />
        </van-col>
      </van-row>
      <van-panel title="合计: {{packageSum}}件" desc="总数: {{numSum}}个" status="状态" use-footer-slot>
        <view slot="footer" class="footer">
          <!-- <van-button size="small">按钮</van-button> -->
          <van-button class="bottomBtn" size="normal" bind:click="toggleBottomPopup">关闭</van-button>
          <van-button class="bottomBtn" size="normal" type="danger">入库</van-button>
        </view>
      </van-panel>
    </view>

    <!-- <van-swipe-cell id="swipe-cell" right-width="{{ 65 }}" left-width="{{ 65 }}" async-close bind:close="onClose">
      <view slot="left" class="van-swipe-cell__left">选择</view>
      <van-cell title="单元格" value="内容" />
      <view slot="right" class="van-swipe-cell__right">删除</view>
    </van-swipe-cell> -->

  </van-popup>

  <!-- 出库按钮 -->
  <view class='bottom-btn outStock' bindtap="toggleBottomPopup2">
    <view class="toOutStock">出库</view>
  </view>

  <van-popup
    show="{{bottom2}}"
    position="bottom"
    custom-class="bottom"
    bind:close="toggleBottomPopup2"
    >
    <view class="bottomPopup2">

      <van-row wx:for="{{products}}" wx:key="{{index}}">
        <van-col span="22" offset="1" class="van-col">
          <view class="col">
            <view class="type">{{item[index].product.type}}</view>
            <view class="whorl">{{item[index].product.whorl}}</view>
            <view class="seam">止口: {{item[index].product.seam}}</view>
            <view class="minus">负丝: {{item[index].product.minus}}</view>
            <view class="amount">库存: {{item[index].packages}}</view>
          </view>
          <van-stepper class="stepper" value="{{ 1 }}" bind:change="onChange" />
        </van-col>
      </van-row>
      <van-panel title="合计: {{packageSum}}件" desc="总数: {{numSum}}个" status="状态" use-footer-slot>
        <view slot="footer" class="footer">
          <!-- <van-button size="small">按钮</van-button> -->
          <van-button class="bottomBtn" size="normal" bind:click="toggleBottomPopup2">关闭</van-button>
          <van-button class="bottomBtn" size="normal" type="danger">出库</van-button>
        </view>
      </van-panel>
    </view>
  </van-popup>

</view>
