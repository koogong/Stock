}
.footer {
  text-align: right;
}
.content {
  padding: 20px;
  font-size: 16px;
}
.van-col {
  border-bottom: 1rpx solid #F4F4F4;
}
.col {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  float: left;
}

.type {
  width: 150rpx;
  float: left;
  color: #000;
}
.whorl {
  width: 100rpx;
  float: left;
}
.stepper {
  margin-top: 50rpx;
