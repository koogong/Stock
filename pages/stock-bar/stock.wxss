/* pages/stock-bar/stock.wxss */
.top {
  padding: 40rpx 0rpx;
}

.top-icon {
  color: #000;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 10px;
  margin-left: 4%;
  margin-right: 4.3%;
  border-radius: 15rpx;
  height: 130rpx;
  font-weight: bold;
}
.top-icon {
  background-color: #3D3C41;
}


.icon {
  width: 100%;
  height: 100%;
}
.icon image {
  width: 53%;
  height: 53%;
  padding: 30rpx 35rpx;
}

.stock image {
  width: 60%;
  padding: 30rpx 30rpx;
}

.product image,
.stockList image {
  padding: 30rpx 32rpx;
  width: 50%;
}

.stock-status {
  width: 100%;
  height: 32%;
  padding: 2% 2%;
}

.status-item {
  font-size: 15px;
  text-align: center;
  line-height:60rpx;
  background-color: #fff;
  width: 32%;
  height: 60rpx;
  float: left;
}

.s-item {
  margin-top: -50rpx;
}

.s-title {
  color: #fff;
  width: 45%;
  height: 100%;
  background-color: #FF9C9C;
  box-shadow: .9rpx .9rpx 14rpx rgba(0, 0, 0, .4);
  border-radius: 10rpx;
  overflow: hidden;
}

.piece .s-title {
  background-color: #9CA6FF;
}

.number .s-title {
background-color: #97D596;
}

.s-count {
  width: 50%;
  position: relative;
  top: -100%;
  left: 40%;
  font-size: 22rpx;
}

.status {
  height: auto;
  width: 100%;
  padding: 2% 15rpx;
}
.status-box {
  width: 96%;
  border-radius: 15rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.out {
  margin-top: 30rpx;
}

.s-head {
  color: rgba(0, 0, 0, .8);
  width: 120rpx;
  height: auto;
  margin-left: 20rpx;
  font-size: 30rpx;
  padding: 15rpx 10rpx;
}

.s-item-count {
  width:140rpx;
  font-size:24rpx;
  text-align:center;
  line-height:50rpx;
  color:#fff;
  background-color:#3D3C41;
  position: relative;
  /* top: 235rpx; */
  /* right: 15rpx; */
  border-radius: 0 15rpx 0 15rpx;
  bottom: 70rpx;
  left: 581rpx;
}

.none_record {
  margin-left: 30rpx;
  font-size: 25rpx;
}
