/* components/recrd-cell/cell.wxss */

.record {
  width: 100%;
  height: 55rpx;
  background-color: #fff;
  padding: 20rpx 10rpx;
  position: relative;
  border-bottom: 0.01rpx solid rgba(245 ,245, 245, .9);
}

.type {
  width: 130rpx;
  float: left;
  font-size: 18px;
  text-align: center;
}

.tags {
  width: 100%;
  position: relative;
  top: 7rpx;
}

.tag {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
  font-size: 12px;
  background-color: #F5F5F5;
  border-radius: 5rpx;
  text-align: center;
  margin-left: 8rpx;
}

.number {
  background-color: #3D3C41;
  color: #fff;
  float: right;
  margin-right: 30rpx;
}
